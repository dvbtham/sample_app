<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="<%= active_nav root_path %>">
          <%= link_to t("static_pages.home.title"), root_path %>
        </li>
        <li class="<%= active_nav help_path %>">
          <%= link_to t("static_pages.help.title"), help_path %>
        </li>
        <% if logged_in? %>
          <li class="<%= active_nav users_path %>">
            <%= link_to t("layouts.header.users"), users_path %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("layouts.header.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="<%= active_nav current_user %>">
                <%= link_to t("layouts.header.profile"),
                  current_user %></li>
              <li class="<%= active_nav edit_user_path(current_user) %>">
                <%= link_to t("layouts.header.settings"),
                  edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("layouts.header.logout"),
                logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li class="<%= active_nav login_path %>">
            <%= link_to t("layouts.header.login"), login_path %>
          </li>
        <% end %>
        <li class="locale">
          <%= link_to :en, root_path(locale: :en),
            class: (:active if params[:locale] == "en") %>
          <%= link_to :vi, root_path(locale: :vi),
            class: (:active if params[:locale] == "vi") %>
        </li>
      </ul>
    </nav>
  </div>
</header>
