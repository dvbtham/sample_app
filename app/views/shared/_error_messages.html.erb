<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t(:form_errors_counter, count: @user.errors.count) %>
    </div>
    <ul>
    <% @user.errors.messages.values.uniq.each do |msg| %>
      <% msg.each do |m| %>
        <li><%= m %></li>
      <% end %>
    <% end %>
    </ul>
  </div>
<% end %>
