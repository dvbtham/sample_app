<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, class: "form-control",
      placeholder: t("microposts.compose"),
        rows: Settings.micropost.area_rows %>
  </div>
  <%= f.submit t("microposts.post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, class: "form-control",
      accept: Settings.picture.accept %>
  </span>
<% end %>
